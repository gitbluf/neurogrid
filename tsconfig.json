{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"lib": ["ESNext"],
		"types": ["bun-types"],
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"outDir": "dist",
		"rootDir": "src",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", ".opencode", "**/*.test.ts"]
}
